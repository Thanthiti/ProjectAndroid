<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- เงาด้านหลัง -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/> <!-- สีเงา (ดำโปร่ง 40%) -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- ปุ่มหลัก -->
    <item android:top="-4dp" android:left="-4dp"> <!-- ขยับขึ้นเพื่อให้เห็นเงา -->
        <shape android:shape="rectangle">
            <solid android:color="#ffc43c"/> <!-- สีปุ่ม -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
