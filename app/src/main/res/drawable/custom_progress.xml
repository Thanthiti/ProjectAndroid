<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- พื้นหลัง (สีขาวเมื่อ progress=0) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" /> <!-- มุมมน -->
            <solid android:color="#FFFFFF" /> <!-- สีขาว -->
        </shape>
    </item>

    <!-- หลอดความคืบหน้า (สีฟ้าเมื่อมี progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <stroke android:width="3dp" android:color="@color/white"></stroke>
                <gradient android:startColor="#8EE25C" android:centerColor="#4FB63D" android:endColor="#07940C"></gradient>
            </shape>
        </clip>
    </item>
</layer-list>