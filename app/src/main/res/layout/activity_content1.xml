<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ContentActivity1">

    <!-- Header Bar -->
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_background"
        android:padding="10dp"
        android:elevation="6dp">

        <!-- ปุ่ม Back -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundbtn_back"
            android:padding="8dp"
            android:text="◀ Back"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- รูปโปรไฟล์ -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:elevation="4dp" />

        <!-- ปุ่ม Next -->
        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundbtn_next"
            android:padding="8dp"
            android:text="Next ▶"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/headerBar"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        android:max="100"
        android:progressDrawable="@drawable/custom_progress2" />

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- หัวข้อหลัก -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_background"
                android:elevation="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="12dp"
                android:shadowColor="#66000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="บทที่ 1: ประเภทข้อมูลใน Java"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dataInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataTable"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="#ECEFF1"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:gravity="start"
                android:lineSpacingExtra="6sp"
                android:padding="8dp"
                android:text="📌 ตัวอย่างประเภทข้อมูล:\n
• int myNum = 5;  // เก็บจำนวนเต็ม\n
• float myFloatNum = 5.99f;  // เก็บเลขทศนิยม\n
• char myLetter = 'D';  // เก็บตัวอักษร 1 ตัว\n
• boolean myBool = true;  // เก็บค่า true หรือ false\n
• String myText = &quot;Hello&quot;;  // เก็บข้อความ"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/dataInfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo2"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:paddingTop="12dp"
                android:text="🔹 ประเภทข้อมูลแบ่งออกเป็น 2 กลุ่ม:"
                android:textColor="#0033cc"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataInfo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo3"
                android:fontFamily="serif"
                android:lineSpacingExtra="8sp"
                android:padding="12dp"
                android:text="• ประเภทข้อมูลพื้นฐาน (Primitive Data Types)\n  - byte, short, int, long\n  - float, double\n  - boolean, char"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dataInfo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo4"
                android:fontFamily="serif"
                android:lineSpacingExtra="8sp"
                android:padding="12dp"
                android:text="• ประเภทข้อมูลที่ไม่ใช่พื้นฐาน (Non-Primitive Data Types)\n  - String, Arrays, Classes"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dataInfo6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo5"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:paddingTop="12dp"
                android:text="🔹 ประเภทข้อมูลแบ่งเป็น 8 ประเภท:"
                android:textColor="#0033cc"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataInfo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo6"
                android:elevation="4dp"
                android:fontFamily="serif"
                android:gravity="start"
                android:lineSpacingExtra="8sp"
                android:padding="12dp"
                android:text="• byte    → -128 ถึง 127\n• short   → -32,768 ถึง 32,767\n• int     → -2,147,483,648 ถึง 2,147,483,647\n• long    → -9,223,372,036,854,775,808 ถึง 9,223,372,036,854,775,807\n• float   → ทศนิยม 6-7 ตำแหน่ง\n• double  → ทศนิยม 15-16 ตำแหน่ง\n• boolean → true หรือ false\n• char    → ตัวอักษร 1 ตัว (ASCII)"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnQuiz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataInfo7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:backgroundTint="#ffc43c"
                android:fontFamily="serif"
                android:text="Start Quiz"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:outlineProvider="none"/>



            <TableLayout
                android:id="@+id/dataTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/titleText"
                android:stretchColumns="*"
                android:background="@android:color/darker_gray"
                android:padding="1dp">

                <!-- หัวตาราง -->
                <TableRow android:background="#FF9800">
                    <TextView android:text="Prim. Type" android:textStyle="bold" android:textColor="@android:color/white"/>
                    <TextView android:text="Size" android:textStyle="bold" android:textColor="@android:color/white"/>
                    <TextView android:text="Minimum" android:textStyle="bold" android:textColor="@android:color/white"/>
                    <TextView android:text="Maximum" android:textStyle="bold" android:textColor="@android:color/white"/>
                    <TextView android:text="Wrap. Type" android:textStyle="bold" android:textColor="@android:color/white"/>
                </TableRow>

                <!-- แถวข้อมูล -->
                <TableRow android:background="@android:color/white">
                    <TextView android:text="boolean"/>
                    <TextView android:text="—"/>
                    <TextView android:text="—"/>
                    <TextView android:text="—"/>
                    <TextView android:text="Boolean"/>
                </TableRow>

                <TableRow android:background="#EEEEEE">
                    <TextView android:text="char"/>
                    <TextView android:text="16 bits"/>
                    <TextView android:text="Unicode 0"/>
                    <TextView android:text="Unicode 2^16 -1"/>
                    <TextView android:text="Character"/>
                </TableRow>

                <TableRow android:background="@android:color/white">
                    <TextView android:text="byte"/>
                    <TextView android:text="8 bits"/>
                    <TextView android:text="-128"/>
                    <TextView android:text="+127"/>
                    <TextView android:text="Byte"/>
                </TableRow>

                <TableRow android:background="#EEEEEE">
                    <TextView android:text="short"/>
                    <TextView android:text="16 bits"/>
                    <TextView android:text="-2^15"/>
                    <TextView android:text="+2^15 -1"/>
                    <TextView android:text="Short"/>
                </TableRow>

                <TableRow android:background="@android:color/white">
                    <TextView android:text="int"/>
                    <TextView android:text="32 bits"/>
                    <TextView android:text="-2^31"/>
                    <TextView android:text="+2^31 -1"/>
                    <TextView android:text="Integer"/>
                </TableRow>

                <TableRow android:background="#EEEEEE">
                    <TextView android:text="long"/>
                    <TextView android:text="64 bits"/>
                    <TextView android:text="-2^63"/>
                    <TextView android:text="+2^63 -1"/>
                    <TextView android:text="Long"/>
                </TableRow>

                <TableRow android:background="@android:color/white">
                    <TextView android:text="float"/>
                    <TextView android:text="32 bits"/>
                    <TextView android:text="IEEE754"/>
                    <TextView android:text="IEEE754"/>
                    <TextView android:text="Float"/>
                </TableRow>

                <TableRow android:background="#EEEEEE">
                    <TextView android:text="double"/>
                    <TextView android:text="64 bits"/>
                    <TextView android:text="IEEE754"/>
                    <TextView android:text="IEEE754"/>
                    <TextView android:text="Double"/>
                </TableRow>

                <TableRow android:background="@android:color/white">
                    <TextView android:text="void"/>
                    <TextView android:text="—"/>
                    <TextView android:text="—"/>
                    <TextView android:text="—"/>
                    <TextView android:text="Void"/>
                </TableRow>

            </TableLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>