<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="clip_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Quiz3Activity">
    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">>


        <!-- back home -->

        <TextView
            android:id="@+id/quiz3textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/protest_strike"
            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imgProfile3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/circle_shape"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/black" />

        <ImageButton
            android:id="@+id/btnquiz3_BackHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/circle_back_1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back" />

        <!-- Menu Icon 3 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/prompt_bold"
            android:text="Quiz after class"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleQuiz3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/prompt_medium"
            android:text="Operator"
            android:textColor="#3F4FB3"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/heart3_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/heart_1" />


        <!-- Menu Icon 2  -->
        <ImageView
            android:id="@+id/heart3_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@id/heart3_3"
            app:srcCompat="@drawable/heart_1" />

        <!-- Menu Icon 1  -->
        <ImageView
            android:id="@+id/heart3_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@id/heart3_2"
            app:srcCompat="@drawable/heart_1" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#3F50B4"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- ส่วนแสดงคำถาม -->
            <TextView
                android:id="@+id/titleQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="center"
                android:text="Question 1 :"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:overScrollMode="always">

                <TextView
                    android:id="@+id/quiz3_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <GridLayout
                android:id="@+id/gridChoice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="2dp">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quiz3_card1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#673AB7"
                        android:gravity="clip_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img3_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/one" />

                        <TextView
                            android:id="@+id/textView3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/prompt_light"
                            android:gravity="center"
                            android:lineSpacingExtra="-5dp"
                            android:text="สร้างค่าคงที่และค่าตัวแปร"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quiz3_card2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#4CAF50"
                        android:gravity="clip_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img3_2"
                            android:layout_width="55dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="5dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/two" />


                        <TextView
                            android:id="@+id/textView3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/prompt_light"
                            android:gravity="center"
                            android:lineSpacingExtra="-5dp"
                            android:text="ดำเนินการกับตัวแปรและค่า"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Card 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quiz3_card3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#FF9800"
                        android:gravity="clip_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img3_3"
                            android:layout_width="55dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="5dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/three" />

                        <TextView
                            android:id="@+id/textView3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/prompt_light"
                            android:gravity="center"
                            android:lineSpacingExtra="-5dp"
                            android:text="สร้างออบเจ็กต์และคลาส"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Card 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quiz3_card4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#E04E4E"
                        android:gravity="clip_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img3_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/four" />

                        <TextView
                            android:id="@+id/textView3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/prompt_light"
                            android:gravity="center"
                            android:lineSpacingExtra="-5dp"
                            android:text="เข้าถึงเพื่อแสดงบนหน้าจอ"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Question Image -->


</LinearLayout>

